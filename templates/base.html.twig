<body>

    <header>
        <div class="container">  
            <nav>
                <!-- Menu burger -->
                <input type="checkbox" id="menu-checkbox" class="menu-checkbox">
                <label for="menu-checkbox" class="menu-toggle">≡</label>
                <label for="menu-checkbox" class="menu-croix">x</label>
                
                <!-- Barre de navigation -->

                <div class="liens-nav">

                    {# <a href="#"><img src="img/ri_earth-line.svg" alt="planete"/> Notre blog</a>

                    <a href="#"><img src="img/fluent_mail-16-filled.svg" alt="contact"/> Nous contacter</a> #}
                  
                 <a href="{{ path("Index") }}">
                     <svg width="200" height="100">
                        <img src="../images/ant-design_home-filled.svg" alt="home"/>
                    </svg> Home
                </a>



                 {% if is_granted("ROLE_USER") %}

              


                <a href="{{ path("Profile") }}">
                     <svg width="200" height="100">
                        <img src="../images/profile_picture.svg" alt="inscription"/>
                    </svg> Mon profil
                </a>

                <a href="{{ path("app_logout") }}">
                     <svg width="200" height="100">
                        <img src="../images/profile_picture.svg" alt="inscription"/>
                    </svg> Se déconnecter
                </a> 
            
            
                {% else %}
			    <span>
                    <a href="{{ path("Login") }}">
                        <svg width="200" height="100">
                            <img src="../images/profile_picture.svg" alt="inscription"/>
                        </svg> Se connecter
                    </a>
                </span>

                <span>
                    <a href="{{ path("RegistrationController") }}">
                        <svg width="200" height="100">
                            <img src="../images/profile_picture.svg" alt="inscription"/>
                        </svg> M'inscrire
                    </a>
                </span>
                {% endif %}

                <a href="#" class="logo"><img src="img/logo.png" alt="logo"/></a> 

                </div>

            </nav>

                <!-- Logo Mobile -->
                <a href="#" class="logo-mobile"><img src="img/logo.png" alt="logo"/></a> 
        </div>
        
    </header>


        {% block body %} 
        CECI SERA LE BODY DE LA PAGE
        {% endblock %}

    <footer>
        <a href="#">Besoin d'aide ?</a>
